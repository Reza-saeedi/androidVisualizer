<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.visualizer.VisualizerActivity">

    <com.android.visualizer.VisualizerView
        android:id="@+id/view_visualizer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/button_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_grant_audio_permission"
        android:layout_margin="16dp"
        android:layout_gravity="center" />

</FrameLayout>
